<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>io.github.cleomenezesjr.aurea</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Aurea</name>
  <summary>Flatpak metainfo banner previewer</summary>
  <description>
    <p>
      Aurea is a simple preview banner made to read metainfo files from Flatpak apps and represent
      them as they would on Flathub.
    </p>
  </description>
  <url type="homepage">https://github.com/CleoMenezesJr/Aurea</url>
  <url type="bugtracker">https://github.com/CleoMenezesJr/Aurea/issues</url>
  <launchable type="desktop-id">io.github.cleomenezesjr.aurea.desktop</launchable>
  <developer_name translate="no">Cleo Menezes Jr.</developer_name>
  <branding>
    <color type="primary" scheme_preference="light">#f883b1</color>
    <color type="primary" scheme_preference="dark">#9c174c</color>
  </branding>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <requires>
    <display_length compare="ge">300</display_length>
  </requires>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/CleoMenezesJr/Aurea/main/data/screenshots/1.png</image>
      <caption>Aurea</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/CleoMenezesJr/Aurea/main/data/screenshots/2.png</image>
      <caption>Aurea adaptive</caption>
    </screenshot>
  </screenshots>
  <content_rating type="oars-1.1" />
  <releases>
    <release version="1.6" date="2024-04-02">
      <description translate="no">
        <ul>
          <li>GNOME 48 runtime</li>
          <li>Brazilian Portuguese, Turkish, Georgian and Italian translations</li>
          <li>Blueprint 0.16.0</li>
          <li>Bug fixes and more...</li>
        </ul>
      </description>
    </release>
    <release version="1.5" date="2024-09-21">
      <description translate="no">
        <ul>
          <li>GNOME 47 support</li>
          <li>Hot reload banner when metainfo is edited</li>
          <li>Open metainfo file using Aurea</li>
          <li>Reload banner using &lt;F5&gt;</li>
          <li>Add Norwegian translations</li>
          <li>Update Blueprint 0.14.0</li>
        </ul>
      </description>
    </release>
    <release version="1.4" date="2024-05-31">
      <description translate="no">
        <ul>
          <li>Fixed issue with some misplaced screenshots</li>
        </ul>
      </description>
    </release>
    <release version="1.3" date="2024-05-29">
      <description translate="no">
        <ul>
          <li>Ability to drag and drop metainfo file</li>
          <li>Enable file opening directly from the file manager</li>
          <li>Indicate loading status or failure to load for screenshots</li>
          <li>Introduce new screenshot banners</li>
          <li>Various minor fixes and enhancements</li>
        </ul>
      </description>
    </release>
    <release version="1.2" date="2024-05-05">
      <description translate="no">
        <ul>
          <li>Update branding colors</li>
        </ul>
      </description>
    </release>
    <release version="1.0" date="2024-04-25">
      <description translate="no">
        <p>First stable release</p>
      </description>
    </release>
  </releases>
</component>
